{
    "name": "private-captcha/private-captcha-php",
    "description": "PHP client for server-side usage of Private Captcha API",
    "type": "library",
    "require": {
        "php": ">=8.2",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^2.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PrivateCaptcha\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PrivateCaptcha\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test:coverage": "phpunit --colors=always --coverage-html coverage/",
        "format": "php-cs-fixer fix --diff",
        "format:check": "php-cs-fixer fix --diff --dry-run",
        "lint": "find src tests -name '*.php' -exec php -l {} \\;",
        "analyze": "phpstan analyse src tests --level=8"
    }
}
